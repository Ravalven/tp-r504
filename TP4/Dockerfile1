FROM debian:12

RUN apt-get update && apt-get upgrade -y && \
    apt-get install -y \
    build-essential \
    pkg-config \
    python3-dev \
    python3-pip \
    python3-venv \
    default-libmysqlclient-dev

RUN python3 -m venv /srv/venv

RUN /srv/venv/bin/pip install --upgrade pip && \
    /srv/venv/bin/pip install \
    flask-mysqldb \
    mysql-connector-python
    
RUN mkdir -p /srv/templates

COPY srv/templates/index.html /srv/templates
COPY srv/app_1.py /srv

ENV PATH="/srv/venv/bin:$PATH"

CMD ["flask", "--app", "/srv/app_1", "run", "--host=0.0.0.0"]
