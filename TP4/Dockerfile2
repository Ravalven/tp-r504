FROM debian:11-slim

RUN apt update && apt upgrade -y && apt-get install -y \
    build-essential \
    pkg-config \
    python3-dev \
    python3-pip \
    default-libmysqlclient-dev

RUN pip3 install --upgrade pip

RUN pip3 install flask-mysqldb mysql-connector-python


CMD ["flask","--app","/srv/app_1","run","--host=0.0.0.0","--reload"]